<!-- ========== HEADER ========== -->
<header class="flex flex-wrap md:justify-start md:flex-nowrap z-50 w-full py-4">
  <nav class="relative max-w-7xl w-full flex flex-wrap md:grid md:grid-cols-12 basis-full items-center px-4 md:px-6 md:px-8 mx-auto">
    <div class="md:col-span-3">
      <!-- Logo -->
      <button onclick="location.href='/'">
        <%= image_tag "logo.svg", class: "w-[8rem] md:w-[10rem] h-auto hover:opacity-75 transition-all duration-300 ease-in-out" %>
      </button>
      <!-- End Logo -->
    </div>

    <!-- Button Group -->
    <div class="flex items-center gap-x-2 ms-auto py-1 md:ps-6 md:order-3 md:col-span-3">
      <button type="button" class="py-2 px-3 inline-flex items-center gap-x-2 text-sm font-medium rounded-xl border border-[#FFFFF0] text-[#FFFFF0] hover:text-[#36454F] hover:bg-[#FFFFF0] transition-all duration-300 ease-in-out" onclick="location.href='#'">
        <i class="fa-solid fa-magnifying-glass"></i>
      </button>
      <button type="button" class="py-2 px-3 inline-flex items-center gap-x-2 text-sm font-medium rounded-xl border border-[#FFFFF0] text-[#FFFFF0] hover:text-[#36454F] hover:bg-[#FFFFF0] transition-all duration-300 ease-in-out" onclick="location.href='#'">
        <i class="fa-solid fa-earth-africa"></i>
      </button>
      <button type="button" class="py-2 px-3 inline-flex items-center gap-x-2 text-sm font-medium rounded-xl border border-transparent bg-[#E2725B] text-gray-800 hover:text-[#36454F] hover:bg-[#FFFFF0] transition-all duration-300 ease-in-out" onclick="location.href='#'">
        <i class="fa-solid fa-phone"></i>
      </button>

      <div class="md:hidden">
        <button type="button" class="hs-collapse-toggle size-[38px] flex justify-center items-center text-sm font-semibold rounded-xl border border-gray-200 text-[#FFFFF0] hover:text-gray-800 hover:bg-gray-100 transition-all duration-400 ease-in-out">
          <i class="fa-solid fa-bars"></i>
        </button>
      </div>
    </div>
    <!-- End Button Group -->

    <!-- Collapse -->
    <div class="hidden md:block overflow-hidden transition-all duration-300 ease-in-out basis-full grow md:w-auto md:basis-auto md:order-2 md:col-span-6">
      <div class="flex flex-col gap-y-4 gap-x-0 mt-5 md:flex-row md:justify-center md:items-center md:gap-y-0 md:gap-x-7 md:mt-0">
        <div>
          <button onclick="location.href='/'" class="relative inline-block text-[#FFFFF0] before:absolute before:bottom-0 before:start-0 before:-z-[1] before:w-full before:h-1 before:bg-[#E2725B] hover:text-[#E2725B] transition-all duration-300 ease-in-out">
            Home
          </button>
        </div>
        <div>
          <button onclick="location.href='#'" class="inline-block text-neutral-300 hover:text-[#E2725B] transition-all duration-300 ease-in-out">Gallery</button>
        </div>
        <div>
          <button onclick="location.href='#'" class="inline-block text-neutral-300 hover:text-[#E2725B] transition-all duration-300 ease-in-out">About Us</button>
        </div>
        <div>
          <button onclick="location.href='#'" class="inline-block text-neutral-300 hover:text-[#E2725B] transition-all duration-300 ease-in-out">Blogs</button>
        </div>
        <div>
          <button onclick="location.href='#'" class="inline-block text-neutral-300 hover:text-[#E2725B] transition-all duration-300 ease-in-out">FAQs</button>
        </div>
      </div>
    </div>
    <!-- End Collapse -->
  </nav>
</header>
<!-- ========== END HEADER ========== -->
